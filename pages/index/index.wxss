/**index.wxss**/

.news {
    overflow: hidden;
    margin: 20rpx;
    background: #fff;
    border-radius: 8rpx;
}

.title {
    display: -webkit-box;
    margin: 10rpx 20rpx 0;
    font-size: 34rpx;
    color: #333;
    white-space: pre-wrap;
    word-break: break-word;
}

.imgitem {
    flex: none;
    width: 100%;
    height: 300rpx;
    overflow: hidden;
    display: block;
}

.content {
    position: relative;
    color: #333;
}

.detail {
    padding: 10rpx 20rpx 20rpx;
    font-size: 28rpx;
    color: #999;
    z-index: 3;
    line-height: 1.5;
}

.bottom {
    position: absolute;
    top: 244rpx;
    width: 100%;
    display: flex;
    margin: 10rpx 0 0;
    padding: 0 20rpx;
    color: #fff;
    line-height: 2;
    background: rgba(0, 0, 0, 0.2);
}

.icon {
    font-size: 24rpx;
    margin-right: 24rpx;
}

.bottom .iconfont {
    margin: -22rpx 0 0;
    font-size: 24rpx;
}

.carousel {
    width: 100%;
    background-color: rebeccapurple;
}

.carousel_swiper {
    width: 100%;
    height: 400rpx;
    display: block;
    position: relative;
    background: #f4f4f4;
}

.carouselImg {
    width: 100%;
    height: inherit;
}