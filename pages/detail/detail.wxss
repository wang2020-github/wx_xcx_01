@import "../../wxParse/wxParse.wxss";
image {
    display: block;
    width: 100%;
}

.Rose-box {
    background: #fff;
}

.Rose-imgitem {
    height: 330rpx;
    display: block;
    width: 100%;
}

.Rose-description {
    padding: 20rpx;
    margin: 20rpx 0;
    background: #eef0f4;
    color: #666;
    border: 2rpx solid #ddd;
    border-left: 16rpx solid #dddfe4;
}

.Rose-content {
    overflow: hidden;
    word-break: break-word;
}

.Rose-detail {
    font-size: 32rpx;
    line-height: 1.8;
    padding: 20rpx;
    color: #4f4f4f;
    background: #fff;
}

.Rose-title {
    color: #000;
    font-size: 48rpx;
    line-height: 1.4;
}

.Rose-addtime {
    display: flex;
    margin: 0 0 40rpx;
    color: #999;
    font-size: 24rpx;
}

.Rose-addtime .iconfont {
    font-size: 24rpx;
    margin-right: 6rpx;
}

.Rose-keywords {
    margin-right: 20rpx;
}

.wxParse-pre {
    padding: 0 20rpx 20rpx;
    margin: 20rpx 0;
    white-space: pre;
    overflow: auto;
    background: #282c34;
    color: #abb2bf;
    -webkit-overflow-scrolling: touch;
}

.Rose-small {
    padding: 0 10rpx;
    font-size: 30rpx;
    color: #999;
}

.wxParse-p {
    padding: 10rpx 0;
    font-size: 32rpx;
    word-break: break-word;
}

.Rose-lines,
.wxParse-h3 {
    font-size: 36rpx;
    position: relative;
    padding: 10rpx 20rpx;
    color: #333;
}

.Rose-lines:before,
.wxParse-h3:before {
    position: absolute;
    top: 16rpx;
    left: 0;
    width: 8rpx;
    height: 36rpx;
    content: '';
    background: #4bb777;
}

.wxParse-h3 {
    margin: 40rpx 0 0;
    font-weight: 400;
}

.wxParse-h3:before {
    top: 24rpx;
}

.wxParse-li {
    position: relative;
    padding-left: 40rpx;
}

.wxParse-li:before {
    position: absolute;
    left: 10rpx;
    top: 20rpx;
    width: 10rpx;
    height: 10rpx;
    background: #999;
    content: '';
    border-radius: 100%;
}


/*.wxParse-div {
    word-break: break-all;
  }
  */

.wxParse-h5 {
    padding: 5rpx 0;
    font-weight: 600;
}


/*top10推荐*/

.Rose-top {
    background: #fff;
    padding: 20rpx 0;
}

.Rose-topli {
    position: relative;
    padding: 20rpx 20rpx 20rpx 40rpx;
    font-size: 28rpx;
    color: #999;
}

.Rose-topli:before {
    position: absolute;
    left: 20rpx;
    top: 34rpx;
    width: 10rpx;
    height: 10rpx;
    background: #4bb777;
    content: '';
    border-radius: 100%;
}

.Rose-read {
    margin: 40rpx 0 0;
    color: #999;
    font-size: 30rpx;
}

.Rose-Right {
    float: right;
    font-size: 32rpx;
    color: #999;
}

.Rose-Right .iconfont {
    margin-top: -8rpx;
    vertical-align: middle;
    font-size: 34rpx;
}


/*改版评论*/

.icon-like-fill {
    color: #4bb777;
}


